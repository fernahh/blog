---
pageable: true
per_page: 6
---
<% if paginate && num_pages > 1 %>
  <% if prev_page %>
    <p class="paginate"><%= link_to '&#8592; Página anterior'.html_safe, prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <div class="post-index">
    <time class="post-index-date" datetime="<%= article.date.strftime('%Y/%m/%d') %>">
      Publicado em: <%= article.date.strftime('%d/%m/%Y') %></time>
    <h2 class="post-index-title"><%= link_to article.title, article %></h2>
    <div class="post-index-summary">
      <%= article.data.summary %>
    </div>
    <hr class="post-index-separator" />
  </div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p class="paginate pull-right"><%= link_to 'Próxima página &#8594;', next_page %></p>
  <% end %>
<% end %>
