<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"></meta>
    <link rel="canonical" href="<%= "https://fernahh.com.br" + current_page.url %>">

    <title><%= current_page.data.present? ? "#{current_page.data.title} | @fernahh" : title %></title>

    <link rel="apple-touch-icon" href="/apple-touch-icon.jpg" />
    <link rel="icon" href="/favicon.png" />

    <meta name="description" content="<%= current_article.nil? ? description : current_article.data.summary %>"></meta>
    <meta property="og:type" content="<%= current_article.nil? ? 'blog' : 'article' %>"></meta>
    <meta property="og:title" content="<%= current_article.nil? ? title : "#{current_page.data.title} | @fernahh." %>"></meta>
    <meta property="og:site_name" content="<%= title %>"></meta>
    <meta property="og:description" content="<%= current_article.nil? ? description : current_article.data.summary %>"></meta>

    <meta name="twitter:card  " content="summary"></meta>
    <meta name="twitter:site" content="fernahh."></meta>
    <meta name="twitter:creator" content="@fernahh"></meta>
    <meta name="twitter:url" content="<%= "https://fernahh.com.br" + current_page.url %>"></meta>
    <meta name="twitter:title" content="<%= current_article.nil? ? title : "#{current_page.data.title} | @fernahh."  %>"></meta>
    <meta name="twiter:description" content="<%= current_article.nil? ? description : current_article.data.summary %>"></meta>

    <link href="https://fonts.googleapis.com/css?family=Assistant:400,700" rel="stylesheet" />
    <%= stylesheet_link_tag "application" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="Container">
      <%= partial "partials/header" %>
      <%= yield %>
      <%= partial "partials/footer" %>
    </div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
