<% wrap_layout :layout do %>
  <article class="Article" role="article">
    <header>
    <time class="Post_Index__Date" datetime="<%= current_article.date.strftime('%Y/%m/%d') %>">
      Publicado em: <%= current_article.date.strftime('%d/%m/%Y') %></time>
      <h1 class="Article__Title"><%= current_article.title %></h1>
    </header>
    <section>
      <%= current_article.body %>
    </section>
  </article>
<% end %>
